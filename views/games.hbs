<div id="tupleList">
    <h2>Games</h2>

    <table>
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.gameID}}</td>
                <td>{{this.studio}}</td>
                <td>{{this.title}}</td>
                <td>{{this.publishDate}}</td>
                <td>{{this.price}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div id="dbFunctions">
    <div id="insert">
        <h3>Add Game</h3>
        <form id="addGame" method="POST" action="/addGame">
            <table>
                <tr>
                    <td><label for="studioID">Select a Studio:</label></td>
                    <td><select name="studioID" id="studioSelect">
                        {{#each data2}}
                        <option value="{{this.studioID}}">{{this.name}}</option>
                        {{/each}}
                    </select></td>
                </tr>
                <tr>
                    <td><label for="title">Title:</label></td>
                    <td><input type="text" id="title" name="title" required>*required</td>
                </tr>
                <tr>
                    <td><label for="publishDate">Publish Date:</label></td>
                    <td><input type="date" id="publishDate" name="publishDate" required>*required</td>
                </tr>
                <tr>
                    <td><label for="price">Price:</label></td>
                    <td><input type="number" step="0.01" id="price" name="price" required>*required</td>
                </tr>
                <tr>
                    <td><input id="submitBtn" type="submit"></td>
                </tr>
            </table>
        </form>
    </div>
    <div id="update">
        <h3>Update Game</h3>
        <form id="updateGame" method="POST" action="/updateGame">
            <table>
                <tr>
                    <td><label for="gameID">Select a Game:</label></td>
                    <td><select name="gameID" id="updateGameSelect" onchange="updateForm()" required>
                            <option value="">Select</option>
                        {{#each data}}
                        <option value="{{this.gameID}}">{{this.title}}</option>
                        {{/each}}
                    </select></td>
                </tr>
                <tr>
                    <td><label for="studioID">Select a Studio:</label></td>
                    <td><select name="studioID" id="upStudioSelect">
                        <option value="">Select</option>
                        {{#each data2}}
                            <option value="{{this.studioID}}">{{this.name}}</option>
                        {{/each}}
                    </select></td>
                </tr>
                <tr>
                    <td><label for="title">Title:</label></td>
                    <td><input type="text" id="upTitle" name="title" required>*required</td>
                </tr>
                <tr>
                    <td><label for="publishDate">Publish Date:</label></td>
                    <td><input type="date" id="upPublishDate" name="publishDate" required>*required</td>
                </tr>
                <tr>
                    <td><label for="price">Price:</label></td>
                    <td><input type="number" step="0.01" id="upPrice" name="price" required>*required</td>
                </tr>
                <tr>
                    <td><input id="submitBtn" type="submit"></td>
                </tr>
            </table>
        </form>
    </div>
    <div id="delete">
        <h3>Delete Game</h3>
        <form id="deleteGame" method="POST" action="/deleteGame">
            <table>
                <tr>
                    <td><label for="gameID">Select a Game:</label></td>
                    <td><select name="gameID" id="deleteGameSelect">
                        {{#each data}}
                        <option value="{{this.gameID}}">{{this.title}}</option>
                        {{/each}}
                    </select></td>
                </tr>
                <tr>
                    <td><input id="submitBtn" type="submit"></td>
                </tr>
            </table>
        </form>
    </div>
</div>
<script src="./js/games.js"></script>